---
// Fundations
import "@/styles/global.css";
import BaseHead from "@/components/fundations/head/BaseHead.astro";
// Sections
import Footer from "@/components/global/Footer.astro";
import Navigation from "@/components/global/Navigation.astro";
// Components
import Search from "@/components/global/Search.astro";
// Hides the  navigation, or footer on selected screens by passing props:
// <BaseLayout hideNavigation={true} hideFooter={true}>
const {
  hideNavigation = false,
  hideFooter = false,
  title,
  description,
  canonical,
  ogImage,
  noindex,
  structuredData,
} = Astro.props;
---

<html lang="en" class="scroll-smooth dark">
  <head>
    <BaseHead
      title={title}
      description={description}
      canonical={canonical}
      ogImage={ogImage}
      noindex={noindex}
      structuredData={structuredData}
    />
  </head>
  <body class="flex flex-col bg-base-950">
    {!hideNavigation && <Navigation />}
    <main class="grow"><slot /></main>
    {!hideFooter && <Footer />}
    <Search />
  </body>
</html>
