---
import { AstroSeo } from "@astrolib/seo";

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  noindex?: boolean;
}

const {
  title = "Swipe.Photo – Clean and Declutter Your iPhone Photos Fast",
  description = "Swipe.Photo helps you quickly clean and declutter your iPhone camera roll by swiping to keep what matters and delete what doesn’t.",
  canonical = "https://swipe.photo",
  ogImage = "https://swipe.photo/og-image.jpg",
  noindex = false,
} = Astro.props;
---

<AstroSeo
  title={title}
  description={description}
  canonical={canonical}
  noindex={noindex}
  openGraph={{
    url: canonical,
    title: title,
    description: description,
    images: [
      {
        url: ogImage,
        width: 1200,
        height: 630,
        alt: title,
        type: "image/jpeg",
      },
    ],
    site_name: "Swipe.Photo",
    type: "website",
    locale: "en_US",
  }}
  twitter={{
    handle: "@swipephoto",
    site: "@swipephoto",
    cardType: "summary_large_image",
  }}
/>
