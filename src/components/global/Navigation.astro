---
import Logo from "@/components/assets/Logo.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const links = [
  { label: "Blog", href: "/blog" },
  { label: "Team", href: "/team" },
];
---

<header class="sticky top-0 z-50 bg-base-950">
  <Wrapper variant="standard" class="border-b border-white/20 relative">
    <div class="flex items-center justify-between px-8 py-4">
      <a
        href="/"
        class="text-white font-black uppercase tracking-tight hover:text-accent-500 transition-colors duration-200"
      >
        <Logo />
      </a>
      <nav class="hidden md:block">
        <ul class="flex items-center gap-8">
          {
            links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-white hover:text-accent-400 text-lg font-meidum uppercase transition-colors duration-200"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>
      <div class="hidden md:block">
        <Button
          isLink
          href="https://buy.polar.sh/polar_cl_FXRw3SyBuhQ13WXNoPoMoYL7yI7WGkerm9v8t2IY6xY"
          variant="default"
          size="xs"
          class="rounded-full gap-2"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
          </svg>
          Download Swipe
        </Button>
      </div>
      <!-- Mobile Menu Button -->
      <button
        id="menu-toggle"
        aria-label="Toggle menu"
        class="md:hidden text-white focus:outline-none hover:text-accent-500 transition-colors"
      >
        Menu
      </button>
    </div>
    <!-- Mobile Menu -->
    <div
      id="mobile-menu"
      class="hidden md:hidden border-t border-white/20 bg-base-950 absolute left-0 right-0 top-full h-screen border-x border-white/20 -mx-px"
    >
      <nav class="flex flex-col p-8 gap-6 items-center text-center">
        {
          links.map((link) => (
            <a
              href={link.href}
              class="text-white hover:text-accent-500 text-xl font-black uppercase tracking-tighter transition-colors duration-200"
            >
              {link.label}
            </a>
          ))
        }
        <div class="pt-4 w-full max-w-xs">
          <Button
            isLink
            href="https://starterbuild.com"
            variant="default"
            size="md"
            class="rounded-full w-full justify-center gap-2"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
            </svg>
            Download Swipe
          </Button>
        </div>
      </nav>
    </div>
  </Wrapper>
</header>
<script>
  const menuToggle = document.getElementById("menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");
  menuToggle?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });
</script>
