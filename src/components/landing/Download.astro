---
// Fundations
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Text from "@/components/fundations/elements/Text.astro";
---

<section>
  <Wrapper variant="standard">
    <div class="p-8 lg:p-12 flex flex-col sm:flex-row items-center justify-between gap-6 lg:gap-8 border-b border-white/20">
      <div class="text-center sm:text-left">
        <Text
          tag="p"
          variant="textLG"
          class="text-white font-bold uppercase tracking-tight"
        >
          Ready to declutter?
        </Text>
        <Text
          tag="p"
          variant="textSM"
          class="text-base-400 mt-1"
        >
          Free on the App Store. No account required.
        </Text>
      </div>
      
      <a
        href="https://apps.apple.com/app/swipe-photo"
        target="_blank"
        rel="noopener noreferrer"
        class="group flex items-center gap-3 bg-base-950 hover:bg-accent-500 border border-white/20 hover:border-accent-500 rounded-xl px-5 py-3 transition-all duration-300 ease-in-out"
      >
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          class="w-7 h-7 text-white" 
          viewBox="0 0 24 24" 
          fill="currentColor"
        >
          <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
        </svg>
        <div class="flex flex-col">
          <span class="text-white/70 text-[10px] uppercase tracking-wide leading-none group-hover:text-white/90 transition-colors duration-300">
            Download on the
          </span>
          <span class="text-white font-bold text-lg leading-tight tracking-tight">
            App Store
          </span>
        </div>
      </a>
    </div>
  </Wrapper>
</section>
