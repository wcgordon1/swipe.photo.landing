---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const testimonials = [
  {
    text: "I opened this app to clear storage and somehow cleared emotional baggage too. Didn’t expect that, but I’ll take it.",
    author: "Alex M.",
    title: "iPhone User",
  },
  {
    text: "It’s weirdly therapeutic. No popups, no guilt, just decisions. My camera roll finally makes sense again.",
    author: "Sarah K.",
    title: "Product Manager",
  },
  {
    text: "I deleted screenshots I’ve been carrying around since 2019. That alone was worth it.",
    author: "Ryan T.",
    title: "Recovering Screenshot Hoarder",
  },
  {
    text: "Fast, focused, and doesn’t try to be my friend. Exactly what a cleanup app should be.",
    author: "Megan L.",
    title: "Designer",
  },
];
---

<section>
  <Wrapper variant="standard" class="border-b">
    <div class="gap-12 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 p-8">
      {
        testimonials.map((item) => (
          <figure class="flex flex-col justify-between h-full">
            <blockquote>
              <Text variant="textSM" class="font-normal  text-secondary-400">
                {item.text}
              </Text>
            </blockquote>
            <figcaption class="mt-3 not-italic">
              <Text
                tag="h3"
                variant="textSM"
                class="block font-medium mt-3 text-white"
              >
                {item.author}
              </Text>
              <Text tag="p" variant="textSM" class="block text-secondary-400 ">
                {item.title}
              </Text>
            </figcaption>
          </figure>
        ))
      }
    </div>
  </Wrapper>
</section>
