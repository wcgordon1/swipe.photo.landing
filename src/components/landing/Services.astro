---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const services = [
  {
    title: "Swipe to Keep or Delete",
    description:
      "One photo at a time. Swipe right to keep, swipe left to delete. No menus, no extra steps — just fast decisions.",
  },
  {
    title: "Haptic Decision Feedback",
    description:
      "A subtle haptic bump confirms your choice so it feels satisfying and clear — without loud colors or cheesy animations.",
  },
  {
    title: "Progress You Can Feel",
    description:
      "See where you are in the roll with a simple counter and a clean summary at the end: kept, deleted, reviewed.",
  },
  {
    title: "Private, On-Device Cleanup",
    description:
      "No accounts and no uploads. Your photos stay on your phone while you clean up your camera roll quickly.",
  },
];
---

<Wrapper class="border-b divide-y">
  <div
    class="text-white text-xs gap-3 gap-y-12 grid grid-cols-1 md:grid-cols-4"
  >
    {
      services.map(({ title, description }) => (
        <div class="p-8">
          <Text
            tag="h3"
            variant="textLG"
            class=" uppercase font-medium text-white text-balance"
          >
            {title}
          </Text>
          <p class="mt-3 text-secondary-400 text-sm">{description}</p>
        </div>
      ))
    }
  </div>
</Wrapper>
