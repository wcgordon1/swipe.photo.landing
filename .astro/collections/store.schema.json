{
  "$ref": "#/definitions/store",
  "definitions": {
    "store": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "oldPrice": {
          "type": "number"
        },
        "currency": {
          "type": "string",
          "default": "USD"
        },
        "sku": {
          "type": "string"
        },
        "badge": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "image": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string"
            },
            "alt": {
              "type": "string"
            }
          },
          "required": [
            "url",
            "alt"
          ],
          "additionalProperties": false
        },
        "gallery": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string"
              },
              "alt": {
                "type": "string"
              }
            },
            "required": [
              "url",
              "alt"
            ],
            "additionalProperties": false
          }
        },
        "status": {
          "type": "string",
          "enum": [
            "draft",
            "published",
            "archived"
          ],
          "default": "published"
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "externalUrl": {
          "type": "string"
        },
        "downloadUrl": {
          "type": "string"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "description",
        "price",
        "category",
        "image"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}